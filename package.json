{
  "name": "simple-memory-mcp",
  "version": "1.0.0",
  "description": "A Model Context Protocol (MCP) server for managing user memories with web interface",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "web": "node src/web/app.js",
    "dev:web": "nodemon src/web/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "init-db": "node scripts/init-database.js",
    "deploy": "node scripts/deploy.js",
    "build": "npm run init-db"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "ai-assistant",
    "sqlite",
    "web-interface"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "path": "^0.12.7",
    "fs-extra": "^11.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eragonht1/simple-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/eragonht1/simple-memory-mcp/issues"
  },
  "homepage": "https://github.com/eragonht1/simple-memory-mcp#readme",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}

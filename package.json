{
  "name": "simple-memory-mcp",
  "version": "1.3.0",
  "description": "A Model Context Protocol (MCP) server for managing user memories with web interface",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "web": "node src/web/app.js",
    "web:start": "node start-web.js",
    "dev:web": "nodemon src/web/app.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "init-db": "node scripts/init-database.js",
    "deploy": "node scripts/deploy.js",
    "build": "npm run init-db",
    "prepublishOnly": "npm test && npm run build",
    "prepack": "npm run init-db",
    "audit": "npm audit",
    "audit:fix": "npm audit fix"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "memory",
    "ai-assistant",
    "sqlite",
    "web-interface"
  ],
  "author": {
    "name": "eragonht1",
    "url": "https://github.com/eragonht1"
  },
  "license": "MIT",
  "files": [
    "src/",
    "scripts/",
    "start-mcp.js",
    "start-web.js",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/eragonht1/simple-memory-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/eragonht1/simple-memory-mcp/issues"
  },
  "homepage": "https://github.com/eragonht1/simple-memory-mcp#readme",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "extensionsToTreatAsEsm": [".js"],
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
